   # .git/hooks/post-checkout
   #!/usr/bin/env pwsh

   $branch = git rev-parse --abbrev-ref HEAD

   if ($branch -eq "main") {
       Copy-Item -Path "wrangler.prod.toml" -Destination "wrangler.toml"
       Write-Output "Switched to production configuration."
   } elseif ($branch -eq "devel") {
       Copy-Item -Path "wrangler.dev.toml" -Destination "wrangler.toml"
       Write-Output "Switched to development configuration."
   }